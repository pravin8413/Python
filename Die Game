print("Die Rolling simulator\n")
from random import randint

a=input('Enter P/p to roll the Die or Q/q ti quit')
if a.capitalize() == 'P':
    print(randint(1,6))
    print("\n")
elif a.capitalize()=="Q":
    exit()
while True:
    a = input('Enter P/p to roll the Die or Q/q ti quit')
    if a.capitalize() == 'P':
        print(randint(1, 6))
        print("\n")
    elif a.capitalize() == "Q":
        exit()

